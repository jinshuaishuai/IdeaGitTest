<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jin.mapper.UserPointMapper">
    <resultMap type="com.jin.entity.domain.PointDO" id="BasePointResult">
        <result column="id" jdbcType="INTEGER" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="point" jdbcType="DECIMAL" property="point"/>
    </resultMap>
    <insert id="addPoint" parameterType="com.jin.entity.domain.PointDO">
        INSERT INTO user_point ( user_id, point)
        VALUES
        (
            #{userId, jdbcType=INTEGER},
            #{point, jdbcType=DECIMAL}
        )
    </insert>
</mapper>